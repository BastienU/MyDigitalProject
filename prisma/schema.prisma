generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  created        DateTime @default(now())
  modified       DateTime @updatedAt
  username       String
  genre          String
  email          String   @unique
  password       String
  role           String
  termsAccepted   Boolean
}

model Product {
  id          Int      @id @default(autoincrement())
  created     DateTime @default(now())
  modified    DateTime @updatedAt
  name        String
  price       Float
  description String?
  composition String?
  image       String?
  code        String   @unique
}